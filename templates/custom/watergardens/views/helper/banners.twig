{% if data.slides.slides['sidebar']['images'] is defined %}
    {% for slide in data.slides.slides['sidebar']['images'] %}
        <figure class="banner">
            {% if slide.image != "" %}
                {% if slide.url != "" %}<a href='{{- slide.url -}}' target='{{- slide.target -}}'>{% endif %}
                <img src='{{- slide.image -}}' alt='{{- slide['altTag'] -}}'/>
                {% if slide.url != "" %}</a>{% endif %}
            {% endif %}
            {% if slide.image_text != "" %}
                <p>{{- slide.image_text -}}</p>
            {% endif %}
        </figure>
    {% endfor %}
{% endif %}