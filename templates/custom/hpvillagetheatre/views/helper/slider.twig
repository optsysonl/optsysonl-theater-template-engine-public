{% for slide in slides %}
    <figure class='slide'>
        <a href='{{- slide.url -}}' target='{{- slide.target -}}'>
            <img src='{{- slide.image -}}' alt='{{- slide['altTag'] -}}'/>
            {% if style != 'advanced' and slide['image_text'] != '' %}
                <div class='slider-text'>
                    <figcaption>{{ slide['image_text'] }}</figcaption>
                </div>
            {% endif %}
        </a>
        {% if style == 'advanced' %}
            <div class='slider-text'>
                <figcaption>
                    {{ movies[slide.movie_id].name }} - {{ movies[slide.movie_id].release|date('F j, Y') }}
                    <div class='sub-text'>{{ slide['image_text'] }}</div>
                </figcaption>
            </div>
        {% endif %}
    </figure>
{% endfor %}