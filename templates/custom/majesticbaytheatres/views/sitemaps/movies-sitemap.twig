<?xml version="1.0" encoding="UTF-8"?><?xml-stylesheet type="text/xsl" href="{{- site.baseurl -}}/sitemap/styles-sitemap.xsl"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd http://www.google.com/schemas/sitemap-image/1.1 http://www.google.com/schemas/sitemap-image/1.1/sitemap-image.xsd http://www.google.com/schemas/sitemap-video/1.1 https://www.google.com/schemas/sitemap-video/1.1/sitemap-video.xsd"
        xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% set house_id = data.houses|first.house_id %}
    {% set movieData = collectTodayMoviesData(house_id, data.showdates, data.movies.movies) %}

    {% for a_movie in movieData.movies %}
        {%  set movie = a_movie.movie %}
        <url>
            <loc>{{- site.baseurl -}}{{- movie.url -}}</loc>
            <changefreq>hourly</changefreq>
            <priority>0.4</priority>
            {% if movie.poster is defined and movie.poster != '' %}
                <image:image>
                    {% if movie.poster starts with '//' %}
                        {% set image = 'http:' ~ movie.poster %}
                    {% else %}
                        {% set image = movie.poster %}
                    {% endif %}
                    <image:loc>{{- image -}}</image:loc>
                    <image:title><![CDATA[{{ movie.name }}]]></image:title>
                    <image:caption><![CDATA[Poster of {{ movie.name }}]]></image:caption>
                </image:image>
            {% endif %}

            {% if movie.stills|length > 0 %}
                {% for key, img_url in movie.stills %}
                    <image:image>
                        {% if img_url starts with '//' %}
                            {% set image = 'http:' ~ img_url %}
                        {% else %}
                            {% set image = img_url %}
                        {% endif %}
                        <image:loc>{{- image -}}</image:loc>
                        <image:title><![CDATA[{{ movie.name }} still #{{ key }}]]></image:title>
                        <image:caption><![CDATA[Still #{{ key }} for {{ movie.name }}]]></image:caption>
                    </image:image>
                {% endfor %}
            {% endif %}

        </url>
    {% endfor %}
</urlset>
