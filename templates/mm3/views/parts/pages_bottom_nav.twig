<article class='footer_links'>
    {% for nav_item in this_page.footer.bottom_nav %}
    {% if nav_item['sub_nav'] is defined %}
        {% for sub_item in nav_item['sub_nav'] %}
            <a href='{{- sub_item['url'] -}}' {{ sub_item['target'] }}>
                {{ sub_item['name'] }}
            </a>
        {% endfor %}
    {% else %}
        <a href='{{- nav_item['url'] -}}' {{ nav_item['target'] }} id='{{- nav_item['url'] -}}_nav'>
            {{ nav_item['name'] }}
        </a>
    {% endif %}
    {% if ((loop.index % 4) == 0)   %}
        </article>
        <article class='footer_links'>
    {% endif %}
    {% endfor %}
</article>
