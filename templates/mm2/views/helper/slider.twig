{% for slide in slides %}
    <figure class='slide'>
        <a href='{{- slide.url -}}' target='{{- slide.target -}}'>
            <img src='{{- slide.image -}}' alt='{{- slide['altTag'] -}}'/>
        </a>
        {% if slide['image_text'] != '' %}
            <div class='bx-caption'>
                <figcaption>{{ slide['image_text'] }}</figcaption>
            </div>
        {% endif %}
    </figure>
{% endfor %}