<div class="container" id="logo">
	<a href="/"><img src="{{- this_page.header.logo -}}" alt="Logo for {{ site.config.title }}"/></a>
</div>
<div class="bs-docs-header" id="header">
	<div class="container nav-container">
		<div class="navbar-header">
			<button class="navbar-toggle collapsed btn" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<span class="small-menu">Menu</span>
	    </div>
		<nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
			<ul class="nav navbar-nav">
				<li><a href="/">Home</a></li>

                {% if data.houses|length > 1 %}
					<li class="dropdown">
						<a href="/locations" class="dropdown-toggle" data-toggle="dropdown">Locations <span class="drop-icon">&#9660;</span></a>
						<ul class="dropdown-menu" role="menu">
							{{ include('parts/houses_nav.twig') }}
						</ul>
					</li>
                {% else %}
					{% set this_house = data.houses|first %}
					<li><a href="{{- this_house.url -}}">Showtimes</a></li>
                {% endif %}
				
				<li class="dropdown">
					<a href="/movies" class="dropdown-toggle">Movies <span class="drop-icon">&#9660;</span></a>
					<ul class="dropdown-menu" role="menu">
						{{ include('parts/movies_nav.twig') }}
					</ul>
				</li>

                {{ include('parts/pages_top_nav.twig') }}
			</ul>
			<div id="social-header">
            	{{ include('helper/social_media.twig', {icons: this_page.header.social_icons})  }}
			</div>
	    </nav>
	</div>
</div>